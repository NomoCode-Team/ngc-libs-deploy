{
  "type": "object",
  "required": ["deploy", "NETLIFY_AUTH_TOKEN"],
  "properties": {
    "deploy": {
      "type": "object",
      "required": ["netlify"],
      "properties": {
        "netlify": {
          "type": "object",
          "required": ["site"],
          "properties": {
            "site": {
              "type": "string",
              "description": "A site name or ID to deploy to"
            }
          }
        }
      }
    },
    "NETLIFY_AUTH_TOKEN": {
      "type": "string",
      "description": "Netlify API token"
    }
  }
}