{
    "type": "object",
    "properties": {
      "deploy": {
        "type": "object",
        "description": "Deploy namespace",
        "properties": {
          "cloudflare": {
            "type": "object",
            "description": "Cloudflare namespace",
            "properties": {
              "dns": {
                "type": "object",
                "description": "DNS namespace",
                "properties": {
                  "record": {
                    "type": "object",
                    "description": "Defines DNS record values",
                    "properties": {
                      "name": {
                        "type": "string",
                        "description": "DNS record name"
                      },
                      "value": {
                        "type": "string",
                        "description": "DNS record value"
                      },
                      "type": {
                        "type": "string",
                        "enum": ["A", "CNAME"],
                        "description": "DNS record type"
                      },
                      "proxied": {
                        "type": "boolean",
                        "description": "Flag whether the record gets Cloudflare's origin protection"
                      }
                    },
                    "required": ["name", "type", "proxied"]
                  }
                },
                "required": ["record"]
              }
            },
            "required": ["dns"]
          }
        },
        "required": ["cloudflare"]
      },
      "TF_VAR_CLOUDFLARE_ZONE_ID": {
        "type": "string",
        "description": "Domain zone identifier to target for the resource"
      }
    },
    "required": ["deploy", "TF_VAR_CLOUDFLARE_ZONE_ID"]
}
